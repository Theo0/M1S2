package covariance;

import java.util.ArrayList;

public class Sommet {
	
	protected String nomSommet;
	protected Graph graphe;
	protected ArrayList<Arete> aretes;
	
	public Sommet(Graph g){
		this.nomSommet = "SommetSansNom";
		this.graphe = g;
		g.ajouterSommet(this);
		this.aretes = new ArrayList<Arete>();
	}
	
	public Sommet(String n, Graph g){
		this.nomSommet = n;
		this.graphe = g;
		g.ajouterSommet(this);
		this.aretes = new ArrayList<Arete>();
	}
	
	public void ajouterArete(Arete a){
		this.aretes.add(a);
	}
}
